<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{ subject }}</title>
  <meta name="x-preheader" content="{{ preheader }}">
  <style>
    body { background: {{ brand.background }}; color: {{ brand.text_color }}; font-family: {{ brand.font_family }}; }
    .card { background: #ffffff; margin: 0 auto; max-width: {{ brand.content_width_px }}px; border-radius: 8px; padding: 24px 16px; }
    a { color: {{ brand.primary }}; }
  </style>
</head>
<body>
  {% include "partials/header.html.j2" %}

  <table role="presentation" width="100%" cellpadding="0" cellspacing="0"
         style="margin:0 auto;max-width:{{ brand.content_width_px }}px;">
    <tr>
      <td>
        <div class="card">
          {{ body_text | paragraphize | safe }}
          {% with cta_url=cta_url, cta_text=cta_text %}
            {% include "partials/button.html.j2" %}
          {% endwith %}
        </div>
      </td>
    </tr>
  </table>

  {% include "partials/footer.html.j2" %}
</body>
</html>
